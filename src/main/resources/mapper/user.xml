<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.snowball.boardadmin.domain.user.repository.UserRepository">
    <update id="updateUserRole">
        update user_tb set user_role = #{userRole} where id = #{id}
    </update>

    <select id="findAll" resultType="com.snowball.boardadmin.domain.user.dto.UserResponseDto">
        select id, user_name, email,nick_name,user_role, updated_at
        from user_tb
        order by updated_at desc, id desc
    </select>

    <select id="count" resultType="int">
        select count(*) from user_tb
    </select>

    <sql id="searchCondition">
        <if test='option=="black"'>
            where user_role = 'BLACK'
        </if>
    </sql>

    <select id="searchResultCount" parameterType="com.snowball.boardadmin.common.dto.PageRequestDto"
            resultType="int">
        select count(*) from user_tb
        <include refid="searchCondition"/>
    </select>

    <select id="searchResultList" parameterType="com.snowball.boardadmin.common.dto.PageRequestDto"
            resultType="com.snowball.boardadmin.domain.user.dto.UserResponseDto">
        select id, user_name, email,nick_name,user_role, updated_at
        from user_tb
        <include refid="searchCondition"/>
        order by updated_at desc, id desc
        limit #{offset}, #{size}
    </select>

</mapper>